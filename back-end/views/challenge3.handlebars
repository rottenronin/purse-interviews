<script>
  // traverse up to first child of [root] 
  function findFirst(root, el){
    while(true){
    el = el.parentNode;
    if (el && el.parentNode === root){
      return el;
    }
    }
    return null;  
  }
  function redirectToProject(event, parentElem) {
    let from = event.target || event.srcElement

    from = from.parentNode === parentElem ? from : findFirst(parentElem, from)
    window.open(`http://localhost:${from.dataset.port}`, '_blank')
  }
  document.addEventListener("DOMContentLoaded", function(){
    const parentElem = document.getElementById('realizations')
    parentElem.addEventListener(
      'click',
      (event) => redirectToProject(event, parentElem),
    )
  })

  window.onbeforeunload = function () {
    document.getElementById('realization-vue').removeEventListener(
      'click',
      redirectToProject,
    )
  }
</script>